        enabled             = true
        command             = "nextflow run nf-core/eager -profile <docker/singularity/.../institute> --input samplesheet.csv --outdir <OUTDIR>"
        fullParameter       = "help_full"
        showHiddenParameter = "show_hidden"
        beforeText          = """
